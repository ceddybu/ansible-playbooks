# For a multi server setup use an actual interface
# mysql_host_ip: "{{ hostvars[mysql_host]['ansible_eth1']['ipv4']['address'] }}"
# For a one box wonder use localhost
mysql_host_ip: "{{ hostvars[mysql_host]['ansible_lo']['ipv4']['address'] }}"

# PHP: php53u or php54 from IUS
php_version: php53u

# Webserver: nginx, apache
webserver: nginx
vhost_domain: www.raxdigital.support
vhost_user: raxdigital
