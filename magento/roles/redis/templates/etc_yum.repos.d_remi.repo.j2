[remi]
name=Les RPM de remi pour Enterprise Linux 6 - $basearch
mirrorlist=http://rpms.famillecollet.com/enterprise/6/remi/mirror
# remi repo is enabled for automatic updates
# since Magento data in redis is ephmeral
enabled=1
# Only use remi for redis to eliminate package conflicts.
includepkgs=redis
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-remi
