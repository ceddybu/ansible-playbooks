
# ferm rules generated by import-ferm
# http://ferm.foo-projects.org/
domain ip {
    table filter {
        chain INPUT {
            policy ACCEPT;
            mod conntrack ctstate (RELATED ESTABLISHED) ACCEPT;
            protocol icmp ACCEPT;
            interface lo ACCEPT;
            protocol tcp mod conntrack ctstate NEW dport 22 ACCEPT;
            protocol tcp dport {{ web_listen_port }} mod comment comment SABnzbd ACCEPT;
            protocol tcp dport 80 mod comment comment nginx ACCEPT;
            REJECT reject-with icmp-host-prohibited;
        }
        chain FORWARD {
            policy ACCEPT;
            REJECT reject-with icmp-host-prohibited;
        }
        chain OUTPUT policy ACCEPT;
    }
}
